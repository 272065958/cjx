<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cjx_background_color"
    android:orientation="vertical">

    <include layout="@layout/toolbar_view" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        style="@style/tablayout_style"
        android:background="@android:color/white"
        app:tabIndicatorColor="@color/cjx_colorPrimaryDark"
        app:tabSelectedTextColor="@color/cjx_colorPrimaryDark"
        app:tabTextAppearance="@style/my_tab_apperance" />

    <include layout="@layout/divider_view" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>